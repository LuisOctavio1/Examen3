@model IEnumerable<Restaurante.Models.Categoria>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
  <div class="col-2"><img align="center" src = "/imagenes/logo.png" width="225" height="225"></div>
  <div class="col-9"><h1 style="text-align:right">Ukai</h1>
      <br>
      <br>
      

        <p style="text-align:right">Verdadera comida Japonesa</p>
    </div>
</div>
<br>
<br>
<br>
<br>

<div id="carousel" class="carousel slide" data-bs-ride="carousel">
  <ol class="carousel-indicators">
    <li data-bs-target="#carousel" data-bs-slide-to="0" class="active"></li>
    <li data-bs-target="#carousel" data-bs-slide-to="1"></li>
    <li data-bs-target="#carousel" data-bs-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img  src="/imagenes/sliders/restaurante1.jpg"class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item">
      <img  src="/imagenes/sliders/restaurante2.jpeg"class="d-block w-100"  alt="...">
    </div>
    <div class="carousel-item">
      <img  src="/imagenes/sliders/restaurante3.jpg"class="d-block w-100"  alt="...">
    </div>
  </div>
  <button class="carousel-control-prev" data-bs-target="#carousel" type="button" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Anterior</span>
  </button>
  <button class="carousel-control-next" data-bs-target="#carousel" type="button" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Siguiente</span>
  </button>
</div>
<br>
<br>

<div class="container">
  <div class = "row">
    <div class="col-12 d-flex justify-content-center">
      <h2 >Categorias</h2>
    </div>
  </div>
  <br>
  <br>
  <div class="row" style="text-align:center">
    @if(Model.Count()>0){
      @foreach (var categoria in Model.OrderBy(o => o.Id))
      {
        <div class="col-sm">
          <div class="card"  style="text-align:center">
            <img class="card-img-top" src="/@categoria.UrlImagen" alt="Card image cap" width="100" height="300">
            <div class="card-body">
              <h5 class="card-title">@categoria.Nombre</h5>
            </div>
            <div class="card-body">
              <a class="btn1 btn2" asp-area="" asp-controller="Home" asp-action="Menu_@categoria.Nombre" >Ver platillos</a>
              
            </div>
          </div>
        </div>
      }
    }
  </div>
</div>
